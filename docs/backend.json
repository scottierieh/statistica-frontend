{
  "entities": {
    "Team": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Team",
      "type": "object",
      "description": "Represents a team of users.",
      "properties": {
        "id": { "type": "string", "description": "Unique identifier for the team." },
        "name": { "type": "string", "description": "The name of the team." },
        "createdAt": { "type": "string", "format": "date-time", "description": "The date and time when the team was created." }
      },
      "required": ["id", "name", "createdAt"]
    },
    "Membership": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Membership",
      "type": "object",
      "description": "Represents a user's membership in a team.",
      "properties": {
        "id": { "type": "string", "description": "Unique identifier for the membership." },
        "userId": { "type": "string", "description": "Reference to the User." },
        "teamId": { "type": "string", "description": "Reference to the Team." },
        "role": { "type": "string", "enum": ["Admin", "Member"], "description": "The role of the user in the team." }
      },
      "required": ["id", "userId", "teamId", "role"]
    },
    "Invitation": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Invitation",
      "type": "object",
      "description": "Represents an invitation for a user to join a team.",
      "properties": {
        "id": { "type": "string", "description": "Unique identifier for the invitation." },
        "teamId": { "type": "string", "description": "The ID of the team the user is invited to." },
        "email": { "type": "string", "format": "email", "description": "The email of the user being invited." },
        "role": { "type": "string", "enum": ["Admin", "Member"], "description": "The role assigned to the invited user." },
        "status": { "type": "string", "enum": ["pending", "accepted"], "description": "The status of the invitation." },
        "createdAt": { "type": "string", "format": "date-time", "description": "The date the invitation was sent." }
      },
      "required": ["id", "teamId", "email", "role", "status", "createdAt"]
    },
    "User": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "User",
      "type": "object",
      "description": "Represents a user of the application.",
      "properties": {
        "id": { "type": "string", "description": "Unique identifier for the user." },
        "email": { "type": "string", "description": "The user's email address.", "format": "email" },
        "username": { "type": "string", "description": "The user's username." },
        "registrationDate": { "type": "string", "format": "date-time", "description": "The date and time when the user registered." }
      },
      "required": ["id", "email", "username", "registrationDate"]
    },
    "Survey": {
      "title": "Survey",
      "type": "object",
      "description": "A survey definition containing questions and settings.",
      "properties": {
        "id": { "type": "string" },
        "title": { "type": "string" },
        "description": { "type": "string" },
        "status": { "type": "string", "enum": ["draft", "active", "closed"] },
        "created_date": { "type": "string", "format": "date-time" },
        "questions": { "type": "array" },
        "startDate": { "type": "string" },
        "endDate": { "type": "string" },
        "styles": { "type": "object" },
        "showStartPage": { "type": "boolean" },
        "startPage": { "type": "object" },
        "template": { "type": "string" },
        "metadata": { "type": "object" },
        "ownerId": { "type": "string" }
      },
      "required": ["title", "status", "ownerId"]
    },
    "SurveyResponse": {
      "title": "SurveyResponse",
      "type": "object",
      "description": "A response to a survey.",
      "properties": {
        "id": { "type": "string" },
        "survey_id": { "type": "string" },
        "submittedAt": { "type": "string", "format": "date-time" },
        "answers": { "type": "object" },
        "completionTime": { "type": "number" },
        "qualityFlags": { "type": "array" }
      },
      "required": ["survey_id", "submittedAt", "answers"]
    }
  },
  "auth": {
    "providers": [
      "password",
      "anonymous"
    ]
  },
  "firestore": {
    "structure": [
      {
        "path": "/users/{userId}",
        "definition": {
          "entityName": "User",
          "schema": { "$ref": "#/backend/entities/User" },
          "description": "Stores individual user profiles."
        }
      },
      {
        "path": "/teams/{teamId}",
        "definition": {
          "entityName": "Team",
          "schema": { "$ref": "#/backend/entities/Team" },
          "description": "Collection to store team information."
        }
      },
      {
        "path": "/teams/{teamId}/members/{userId}",
        "definition": {
          "entityName": "Membership",
          "schema": { "$ref": "#/backend/entities/Membership" },
          "description": "Stores user membership and roles within a team."
        }
      },
      {
        "path": "/teams/{teamId}/invitations/{invitationId}",
        "definition": {
          "entityName": "Invitation",
          "schema": { "$ref": "#/backend/entities/Invitation" },
          "description": "Stores pending and accepted invitations for a team."
        }
      },
      {
        "path": "/surveys/{surveyId}",
        "definition": {
          "entityName": "Survey",
          "schema": { "$ref": "#/backend/entities/Survey" },
          "description": "Collection of surveys."
        }
      },
      {
        "path": "/surveys/{surveyId}/responses/{responseId}",
        "definition": {
          "entityName": "SurveyResponse",
          "schema": { "$ref": "#/backend/entities/SurveyResponse" },
          "description": "Sub-collection of responses for a specific survey."
        }
      }
    ]
  }
}
